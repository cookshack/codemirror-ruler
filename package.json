{
  "name": "@cookshack/codemirror-ruler",
  "version": "0.2.1",
  "description": "Ruler extension for CodeMirror 6",
  "homepage": "https://git.sr.ht/~mattmundell/codemirror-ruler",
  "scripts": {
    "check": "NODE_OPTIONS=--disable-warning=ExperimentalWarning npx eslint --no-warn-ignored -f ./node_modules/@cookshack/eslint-config/dist/formatter.js -c ./node_modules/@cookshack/eslint-config/dist/index.js *.js",
    "prepare": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://git.sr.ht/~mattmundell/codemirror-ruler"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "sideEffects": false,
  "dependencies": {
    "@cookshack/eslint-config": "file:../eslint-config/latest.tgz",
    "rollup": "^4.21.3"
  },
  "license": "MIT"
}
